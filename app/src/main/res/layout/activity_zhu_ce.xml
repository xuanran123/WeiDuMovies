<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ZhuCeActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/ic_loig"
        >



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#141931">

        <EditText
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/translucent"
            android:hint="请输入昵称"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColorHint="#999999"
            android:theme="@style/MyEditText"
            android:textColor="#fff"
            android:id="@+id/text_nc"
            />
        <EditText
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/translucent"
            android:hint="请输入邮箱账号"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColorHint="#999999"
            android:theme="@style/MyEditText"
            android:textColor="#fff"
            android:id="@+id/text_yx1"
            android:layout_marginTop="55dp"
            />
        <EditText
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/translucent"
            android:hint="请设置密码"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColorHint="#999999"
            android:theme="@style/MyEditText"
            android:textColor="#fff"
            android:id="@+id/text_pwd1"
            android:layout_marginTop="110dp"
            />

        <EditText
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="165dp"
            android:background="@drawable/translucent"
            android:hint="请输入验证码"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColorHint="#999999"
            android:theme="@style/MyEditText"
            android:id="@+id/text_yz"
            android:textColor="#fff"
            />

        <Button
            android:layout_width="96dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="165dp"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/translucent1"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="获取验证码"
            android:textColorHint="#999999"
            android:textSize="9dp"
            android:theme="@style/MyEditText"
            android:id="@+id/text_yanzheng"
            />


        <Button
            android:layout_width="312dp"
            android:layout_height="44dp"
            android:background="@drawable/translucent2"
            android:text="注册"
            android:textColor="#fff"
            android:layout_marginTop="230dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_zhuce1"
            />



    </RelativeLayout>
</LinearLayout>
