<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MoreActivity"
    android:orientation="vertical"
    android:background="#141931"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginTop="@dimen/dp_38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/icon_location"
                android:layout_marginLeft="@dimen/dp_26"
                android:id="@+id/movie_imager"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_36"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15"
                android:layout_toRightOf="@+id/movie_imager"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_marginTop="@dimen/dp_38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/icon_search"
                android:layout_marginLeft="@dimen/dp_240"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:id="@+id/more_rg"
        android:background="#1c2243"
        >

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="正在热映"
            android:gravity="center"
            android:id="@+id/more_rb"
            android:textColor="#fff" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/more_rb1"
            android:layout_height="match_parent"
            android:button="@null"
            android:textColor="#fff"
            android:text="即将上映"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/more_rb2"
            android:layout_height="match_parent"
            android:button="@null"
            android:textColor="#fff"
            android:text="热门电影"
            />

    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/more_vp"
        ></android.support.v4.view.ViewPager>


</LinearLayout>